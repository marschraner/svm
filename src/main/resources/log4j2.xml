<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%-6p] %c{1}:%L - %m%n"/>
        </Console>
        <File name="FileAppender" fileName="${sys:user.home}/log/Svm.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%-6p] %c{1}:%L - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <!-- Change the level to info or debug for troubleshooting -->
        <Logger name="org.hibernate" level="warn"/>
        <!-- Change the level to debug to see the SQL statements generated by Hibernate -->
        <Logger name="org.hibernate.SQL" level="fatal"/>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>