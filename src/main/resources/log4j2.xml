<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <!-- Replace %c{1} by %c to also see package -->
            <PatternLayout pattern="%d [%-6p] %c{1}:%L - %m%n"/>
        </Console>
        <File name="FileAppender" fileName="${sys:user.home}/log/Svm.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%-6p] %c{1}:%L - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <!-- Change the level to info or debug for troubleshooting -->
        <Logger name="org.hibernate" level="warn"/>
        <!-- Change the level to debug to see the SQL statements generated by Hibernate -->
        <Logger name="org.hibernate.SQL" level="fatal"/>
        <!-- Ignore warning HHH000457: Joined inheritance hierarchy [] defined explicit @DiscriminatorColumn. -->
        <!-- See https://gitlab.ewi.tudelft.nl/eip/labrador/queue/-/issues/398 -->
        <Logger name="org.hibernate.boot.model.internal.EntityBinder" level="error"/>
        <!-- Ignore warning HHH10001002: Using built-in connection pool (not intended for production use) -->
        <Logger name="org.hibernate.orm.connections.pooling" level="error"/>
        <!-- Verhindern von Info-Messages und Warnungen von Docx4j im Log -->
        <Logger name="org.docx4j" level="warn"/>
        <Logger name="org.docx4j.XmlUtils" level="error"/>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>